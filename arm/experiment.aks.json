{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus2euap",
      "allowedValues": [
        "eastus2euap",
        "centraluseuap"
      ]
    },
    "experimentName": {
      "type": "string"
    },
    "targetResourceIds": {
      "type": "string",
      "metadata": {
        "description": "Comma-delimited string of target Resource IDs"
      }
    },
    "chaosMeshFaultType": {
      "type": "string",
      "allowedValues": [
        "NetworkChaos",
        "PodChaos",
        "StressChaos",
        "IoChaos",
        "TimeChaos",
        "KernelChaos"
      ]
    },
    "chaosMeshSpec": {
      "type": "string",
      "metadata": {
        "description": "Escaped JSON spec for a specific action in the specified Chaos Mesh Fault Type"
      }
    },
    "duration": {
      "type": "string",
      "defaultValue": "PT1M",
      "metadata": {
        "description": "ISO 8601 duration format"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "targetResourceIds": "[split(parameters('targetResourceIds'), ',')]",
    "apiVersion": "2025-01-01"
  },
  "resources": [
    {
      "type": "Microsoft.Chaos/experiments",
      "name": "[parameters('experimentName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "selectors": [
          {
            "type": "List",
            "id": "aksTargets",
            "copy": [
              {
                "name": "targets",
                "count": "[length(variables('targetResourceIds'))]",
                "input": {
                  "id": "[variables('targetResourceIds')[copyIndex('targets')]]",
                  "type": "ResourceId"
                }
              }
            ]
          }
        ],
        "steps": [
          {
            "name": "Step 1",
            "branches": [
              {
                "name": "Branch 1",
                "actions": [
                  {
                    "type": "continuous",
                    "selectorId": "aksTargets",
                    "duration": "[parameters('duration')]",
                    "parameters": [
                      {
                        "key": "spec",
                        "value": "[parameters('chaosMeshSpec')]"
                      }
                    ],
                    "name": "[concat('urn:provider:Azure-kubernetesClusterChaosMesh:ChaosMesh.', parameters('chaosMeshFaultType'))]"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}