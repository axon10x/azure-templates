{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "displayName": "Azure region",
        "description": "See https://azure.microsoft.com/regions/."
      }
    },
    "keyVaultName": {
      "type": "string"
    },
    "secretName": {
      "type": "secureString"
    },
    "secretValue": {
      "type": "secureString"
    },
    "enabled": {
      "type": "bool",
      "defaultValue": true
    },
    "activationDate": {
      "type": "int",
      "defaultValue": -1,
      "metadata": {
        "displayName": "Not Before",
        "description": "Not Before date in seconds since 1970-01-01T00:00:00Z"
      }
    },
    "expirationDate": {
      "type": "int",
      "defaultValue": -1,
      "metadata": {
        "displayName": "Expiration",
        "description": "Expiry date in seconds since 1970-01-01T00:00:00Z"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag":
    {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "secretName": "[concat(parameters('keyVaultName'), '/', parameters('secretName'))]",
    "attributes":
    "[
          createObject
          (
              'enabled', parameters('enabled'),
              'nbf', if (lessOrEquals(parameters('activationDate'), 0), json('null'), parameters('activationDate') ),			
              'exp', if (lessOrEquals(parameters('expirationDate'), 0), json('null'), parameters('expirationDate'))			
          )
      ]",
    "apiVersionKeyVault": "2024-12-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "[variables('apiVersionKeyVault')]",
      "name": "[variables('secretName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "value": "[parameters('secretValue')]",
        "attributes": "[variables('attributes')]"
      }
    }
  ]
}
