{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "frontDoorName": {
      "defaultValue": "",
      "type": "string"
    },
    "originGroupName": {
      "type": "string",
      "defaultValue": ""
    },
    "originName": {
      "type": "string",
      "defaultValue": ""
    },
    "hostName": {
      "type": "string",
      "defaultValue": ""
    },
    "originHostHeader": {
      "type": "string",
      "defaultValue": ""
    },
    "httpPort": {
      "type": "int",
      "defaultValue": 80,
      "minValue": 1,
      "maxValue": 65535
    },
    "httpsPort": {
      "type": "int",
      "defaultValue": 443,
      "minValue": 1,
      "maxValue": 65535
    },
    "priority": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 5
    },
    "weight": {
      "type": "int",
      "defaultValue": 1000,
      "minValue": 1,
      "maxValue": 1000
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionFd": "2025-06-01",
    "originHostHeader": "[if(empty(parameters('originHostHeader')), parameters('hostName'), parameters('originHostHeader'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Cdn/profiles/originGroups/origins",
      "name": "[concat(parameters('frontDoorName'), '/', parameters('originGroupName'), '/', parameters('originName'))]",
      "apiVersion": "[variables('apiVersionFd')]",
      "properties": {
        "hostName": "[parameters('hostName')]",
        "httpPort": "[parameters('httpPort')]",
        "httpsPort": "[parameters('httpsPort')]",
        "originHostHeader": "[variables('originHostHeader')]",
        "priority": "[parameters('priority')]",
        "weight": "[parameters('weight')]",
        "enabledState": "Enabled"
      }
    }
  ]
}