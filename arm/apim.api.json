{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "apimServiceName": {
      "type": "string"
    },
    "apiName": {
      "type": "string"
    },
    "displayName": {
      "type": "string",
      "defaultValue": ""
    },
    "description": {
      "type": "string",
      "defaultValue": ""
    },
    "isCurrent": {
      "type": "bool",
      "defaultValue": true
    },
    "apiVersion": {
      "type": "string",
      "defaultValue": ""
    },
    "apiVersionSetName": {
      "type": "string",
      "defaultValue": ""
    },
    "apiVersionSetResourceId": {
      "type": "string",
      "defaultValue": ""
    },
    "apiRevision": {
      "type": "string",
      "defaultValue": ""
    },
    "subscriptionRequired": {
      "type": "bool",
      "defaultValue": false
    },
    "path": {
      "type": "string",
      "defaultValue": ""
    },
    "protocols": {
      "type": "string",
      "defaultValue": "http,https",
      "allowedValues": [
        "https,http",
        "http,https",
        "https",
        "http"
      ],
      "metadata": {
        "displayName": "URL Protocols",
        "description": "HTTP and/or HTTPS support. Comma-delimited string, any of these: 'https,http', 'http,https', 'https', 'http'"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionApim": "2024-06-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "apiVersion": "[variables('apiVersionApim')]",
      "name": "[concat(parameters('apimServiceName'), '/', parameters('apiName'))]",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "description": "[parameters('description')]",
        "isCurrent": "[parameters('isCurrent')]",
        "apiVersionSet": {
          "name": "[parameters('apiVersionSetName')]",
          "id": "[parameters('apiVersionSetResourceId')]"
        },
        "apiVersion": "[parameters('apiVersion')]",
        "apiRevision": "[parameters('apiRevision')]",
        "subscriptionRequired": "[parameters('subscriptionRequired')]",
        "path": "[parameters('path')]",
        "protocols": "[split(parameters('protocols'), ',')]"
      }
    }
  ]
}