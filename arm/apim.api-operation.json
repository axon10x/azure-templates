{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "apimServiceName": {
      "type": "string"
    },
    "apiName": {
      "type": "string"
    },
    "operationName": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "httpMethod": {
      "type": "string"
    },
    "urlTemplate": {
      "type": "string"
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionApim": "2024-06-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/apis/operations",
      "apiVersion": "[variables('apiVersionApim')]",
      "name": "[concat(parameters('apimServiceName'), '/', parameters('apiName'), '/', parameters('operationName'))]",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "method": "[parameters('httpMethod')]",
        "urlTemplate": "[parameters('urlTemplate')]",
        "templateParameters": [],
        "responses": []
      }
    }
  ]
}