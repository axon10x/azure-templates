{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetPeeringName": {
      "type": "string"
    },
    "vnetNameLocal": {
      "type": "string"
    },
    "vnetResourceIdRemote": {
      "type": "string"
    },
    "vnetAddressSpaceRemote": {
      "type": "string"
    },
    "allowVirtualNetworkAccess": {
      "type": "bool",
      "defaultValue": true
    },
    "allowForwardedTraffic": {
      "type": "bool",
      "defaultValue": true
    },
    "allowGatewayTransit": {
      "type": "bool",
      "defaultValue": false
    },
    "useRemoteGateways": {
      "type": "bool",
      "defaultValue": false
    }
  },
  "variables": {
    "apiVersionNetwork": "2024-07-01"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "name": "[concat(parameters('vnetNameLocal'), '/', parameters('vnetPeeringName'))]",
      "apiVersion": "[variables('apiVersionNetwork')]",
      "properties": {
        "remoteVirtualNetwork": {
          "id": "[parameters('vnetResourceIdRemote')]"
        },
        "allowVirtualNetworkAccess": "[parameters('allowVirtualNetworkAccess')]",
        "allowForwardedTraffic": "[parameters('allowForwardedTraffic')]",
        "allowGatewayTransit": "[parameters('allowGatewayTransit')]",
        "useRemoteGateways": "[parameters('useRemoteGateways')]",
        "remoteAddressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressSpaceRemote')]"
          ]
        }
      }
    }
  ]
}