{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "namespaceName": {
      "type": "string"
    },
    "zoneRedundant": {
      "type": "bool",
      "defaultValue": false
    },
    "messagingUnits": {
      "type": "int",
      "defaultValue": 1
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionServiceBus": "2025-05-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "[variables('apiVersionServiceBus')]",
      "name": "[parameters('namespaceName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "Premium",
        "tier": "Premium",
        "capacity": "[parameters('messagingUnits')]"
      },
      "properties": {
        "zoneRedundant": "[bool(parameters('zoneRedundant'))]"
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/networkRuleSets",
      "apiVersion": "[variables('apiVersionServiceBus')]",
      "name": "[concat(parameters('namespaceName'), '/default')]",
      "dependsOn": [
        "[concat('Microsoft.ServiceBus/namespaces/', parameters('namespaceName'))]"
      ],
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "defaultAction": "Deny",
        "virtualNetworkRules": [],
        "ipRules": []
      }
    }
  ]
}