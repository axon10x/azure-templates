{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region"
      }
    },
    "namespaceName": {
      "type": "string",
      "defaultValue": ""
    },
    "rights": {
      "type": "string",
      "defaultValue": "Send",
      "allowedValues": [
        "Send",
        "Listen",
        "Send,Listen",
        "Listen,Send"
      ],
      "metadata": {
        "displayName": "Rights",
        "description": "Comma-delimited string with combination of Send and Listen. Allowable values: Send; Listen; Send,Listen; Listen,Send."
      }
    },
    "ruleName": {
      "type": "string",
      "defaultValue": ""
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionEventHub": "2025-05-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
      "name": "[concat(parameters('namespaceName'), '/', parameters('ruleName'))]",
      "apiVersion": "[variables('apiVersionEventHub')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "rights": "[split(parameters('rights'), ',')]"
      }
    }
  ]
}