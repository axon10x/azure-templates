{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "displayName": "Azure region",
        "description": "See https://azure.microsoft.com/regions/."
      }
    },
    "appServicePlanName": {
      "type": "string"
    },
    "skuName": {
      "type": "string"
    },
    "skuTier": {
      "type": "string"
    },
    "skuFamily": {
      "type": "string"
    },
    "capacity": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "displayName": "Initial Capacity",
        "description": "If zoneRedundant=true you MUST pass a capacity that is a multiple of 3."
      }
    },
    "kind": {
      "type": "string",
      "defaultValue": "app",
      "allowedValues": [
        "app",
        "app,linux",
        "linux"
      ]
    },
    "zoneRedundant": {
      "type": "bool"
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "reserved": "[contains(parameters('kind'), 'linux')]",
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionAsp": "2024-11-01"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "[variables('apiVersionAsp')]",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "[parameters('skuTier')]",
        "size": "[parameters('skuName')]",
        "family": "[parameters('skuFamily')]",
        "capacity": "[parameters('capacity')]"
      },
      "kind": "[parameters('kind')]",
      "properties": {
        "perSiteScaling": false,
        "elasticScaleEnabled": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": "[variables('reserved')]",
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0,
        "zoneRedundant": "[parameters('zoneRedundant')]"
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
    }
  }
}
