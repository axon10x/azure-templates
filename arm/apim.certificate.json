{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "apimServiceName": {
      "type": "string"
    },
    "certificateName": {
      "type": "string"
    },
    "identityClientId": {
      "type": "string"
    },
    "secretIdentifier": {
      "type": "string"
    },
    "certificatePassword": {
      "type": "securestring",
      "defaultValue": ""
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionApim": "2024-06-01-preview"
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/certificates",
      "apiVersion": "[variables('apiVersionApim')]",
      "name": "[concat(parameters('apimServiceName'), '/', parameters('certificateName'))]",
      "properties": {
        "keyVault": {
          "identityClientId": "[parameters('identityClientId')]",
          "secretIdentifier": "[parameters('secretIdentifier')]"
        },
        "password": "[parameters('certificatePassword')]"
      }
    }
  ]
}