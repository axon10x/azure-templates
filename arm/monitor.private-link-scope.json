{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "displayName": "Azure region",
        "description": "See https://azure.microsoft.com/regions/."
      }
    },
    "linkScopeName": {
      "type": "string"
    },
    "queryAccessMode": {
      "type": "string",
      "defaultValue": "Open",
      "allowedValues": [
        "Open",
        "PrivateOnly"
      ]
    },
    "ingestionAccessMode": {
      "type": "string",
      "defaultValue": "Open",
      "allowedValues": [
        "Open",
        "PrivateOnly"
      ]
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "apiVersionInsights": "2023-06-01-preview"
  },
  "resources": [
    {
      "type": "microsoft.insights/privateLinkScopes",
      "apiVersion": "[variables('apiVersionInsights')]",
      "name": "[parameters('linkScopeName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "accessModeSettings": {
          "exclusions": [],
          "queryAccessMode": "[parameters('queryAccessMode')]",
          "ingestionAccessMode": "[parameters('ingestionAccessMode')]"
        }
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[resourceId('microsoft.insights/privateLinkScopes', parameters('linkScopeName'))]"
    }
  }
}
