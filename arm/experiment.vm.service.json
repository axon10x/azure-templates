{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]"
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus2euap",
      "allowedValues": [
        "eastus2euap",
        "centraluseuap"
      ]
    },
    "experimentName": {
      "type": "string"
    },
    "restartWhenComplete": {
      "type": "string",
      "defaultValue": "true"
    },
    "skipShutdown": {
      "type": "string",
      "defaultValue": "true"
    },
    "targetResourceIds": {
      "type": "string",
      "metadata": {
        "description": "Comma-delimited string of target Resource IDs"
      }
    },
    "duration": {
      "type": "string",
      "defaultValue": "PT1M",
      "metadata": {
        "description": "ISO 8601 duration format"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": "[createObject()]"
    }
  },
  "variables": {
    "timeStampTag": {
      "Timestamp": "[parameters('timestamp')]"
    },
    "tags": "[union(parameters('tags'), variables('timeStampTag'))]",
    "targetResourceIds": "[split(parameters('targetResourceIds'), ',')]",
    "apiVersion": "2025-01-01"
  },
  "resources": [
    {
      "type": "Microsoft.Chaos/experiments",
      "name": "[parameters('experimentName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "selectors": [
          {
            "type": "List",
            "id": "vmTargets",
            "copy": [
              {
                "name": "targets",
                "count": "[length(variables('targetResourceIds'))]",
                "input": {
                  "id": "[variables('targetResourceIds')[copyIndex('targets')]]",
                  "type": "ResourceId"
                }
              }
            ]
          }
        ],
        "steps": [
          {
            "name": "Step 1",
            "branches": [
              {
                "name": "Branch 1",
                "actions": [
                  {
                    "type": "continuous",
                    "selectorId": "vmTargets",
                    "duration": "[parameters('duration')]",
                    "parameters": [
                      {
                        "key": "restartWhenComplete",
                        "value": "[parameters('restartWhenComplete')]"
                      },
                      {
                        "key": "skipShutdown",
                        "value": "[parameters('skipShutdown')]"
                      }
                    ],
                    "name": "urn:provider:Azure-virtualMachine:Microsoft.Azure.Chaos.Fault.AzureVmShutdown"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}